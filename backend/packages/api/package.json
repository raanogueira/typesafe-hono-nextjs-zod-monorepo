{
  "name": "@typesafe-stack/api",
  "version": "0.0.1",
  "description": "Type-safe financial API with Rust-like safety guarantees",
  "type": "module",
  "imports": {
    "#internal/*": "./dist/*",
    "#routes/*": "./dist/routes/*",
    "#services/*": "./dist/services/*",
    "#repositories/*": "./dist/repositories/*",
    "#db/*": "./dist/db/*",
    "#types/*": "./dist/types/*",
    "#utils/*": "./dist/utils/*",
    "#middleware/*": "./dist/middleware/*",
    "#scripts/*": "./dist/scripts/*",
    "#env": "./dist/env.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./routes/schemas": {
      "types": "./dist/routes/schemas/index.d.ts",
      "import": "./dist/routes/schemas/index.js",
      "require": "./dist/routes/schemas/index.js"
    }
  },
  "packageManager": "npm@11.5.2",
  "engines": {
    "node": ">=24.5.0",
    "npm": ">=11.5.0"
  },
  "scripts": {
    "check": "npm run check:all",
    "build": "tsc --build",
    "build:docker": "tsc --build",
    "build:render": "tsc --build",
    "build:prod": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:properties": "vitest run -t 'Property-Based Tests'",
    "dev": "npm run db:check && tsx watch src/server.ts",
    "start": "npx tsx src/server.ts",
    "start:prod": "NODE_ENV=production npx tsx src/server.ts",
    "new:endpoint": "tsx scripts/generate-endpoint.ts",
    "check:all": "npm run db:check && npm run check:types && npm run check:lint && npm run test",
    "check:types": "tsc --noEmit",
    "check:types:strict": "tsc --noEmit --strict --noImplicitAny --strictNullChecks",
    "check:lint": "eslint src --ext .ts --max-warnings 0",
    "check:security": "npm audit --audit-level moderate",
    "check:security:ci": "audit-ci --moderate",
    "check:updates": "ncu",
    "update:deps": "ncu -u && npm install",
    "check:bundle": "echo 'Bundle analysis skipped for Node.js backend'",
    "check:unused": "npx ts-prune",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist .tsbuildinfo",
    "clean:temp": "rm -rf temp-testing/*",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "db:check": "tsx src/scripts/verify-schema-sync.ts",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:introspect": "drizzle-kit introspect"
  },
  "keywords": ["typescript", "api", "financial", "type-safe", "result", "functional"],
  "author": "Capital Shield",
  "license": "PRIVATE",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raanogueira/typesafe-hono-nextjs-zod-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/raanogueira/typesafe-hono-nextjs-zod-monorepo/issues"
  },
  "homepage": "https://github.com/raanogueira/typesafe-hono-nextjs-zod-monorepo#readme",
  "dependencies": {
    "@typesafe-stack/db-toolkit": "*",
    "@typesafe-stack/hono-server": "*",
    "@hono/node-server": "1.19.0",
    "@hono/swagger-ui": "0.5.2",
    "@hono/zod-validator": "0.4.1",
    "@scalar/hono-api-reference": "0.9.13",
    "dotenv": "17.2.1",
    "drizzle-kit": "0.31.4",
    "drizzle-orm": "^0.44.4",
    "hono": "4.9.4",
    "hono-openapi": "0.4.8",
    "openapi3-ts": "4.5.0",
    "pino": "^9.8.0",
    "postgres": "^3.4.7",
    "ts-pattern": "^5.8.0",
    "tsx": "4.20.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "7.1.0",
    "eslint-plugin-functional": "^9.0.2",
    "fast-check": "4.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "npm-check-updates": "18.0.2",
    "pino-pretty": "^13.1.1",
    "supabase": "2.33.9",
    "tsx": "4.20.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
