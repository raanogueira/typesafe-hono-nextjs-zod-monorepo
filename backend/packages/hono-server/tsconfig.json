{
  "extends": "../../shared-configs/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "#internal/*": ["./src/*"],
      "#middleware/*": ["./src/middleware/*"],
      "#utils/*": ["./src/utils/*"],
      "#types/*": ["./src/types/*"],
      "#server/*": ["./src/server/*"],
      "#config/*": ["./src/config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
