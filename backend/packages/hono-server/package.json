{
  "name": "@typesafe-stack/hono-server",
  "version": "1.0.0",
  "type": "module",
  "imports": {
    "#internal/*": "./dist/*",
    "#middleware/*": "./dist/middleware/*",
    "#utils/*": "./dist/utils/*",
    "#types/*": "./dist/types/*",
    "#server/*": "./dist/server/*",
    "#config/*": "./dist/config/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "build:docker": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:types": "tsc --noEmit",
    "check:lint": "eslint src --max-warnings 0",
    "check:all": "npm run check:types && npm run check:lint && npm run test",
    "clean": "tsc --build --clean"
  },
  "dependencies": {
    "@hono/node-server": "1.19.0",
    "@hono/swagger-ui": "0.5.2",
    "hono": "4.9.4",
    "hono-openapi": "0.4.8",
    "openapi-types": "^12.1.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "swagger-ui-dist": "^5.28.0"
  },
  "devDependencies": {
    "@types/swagger-ui-dist": "^3.30.4",
    "@types/node": "^24.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
