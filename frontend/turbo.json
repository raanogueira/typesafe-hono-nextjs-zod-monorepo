{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "type-check": {
      "cache": true,
      "outputs": ["*.tsbuildinfo", "dist/**"],
      "dependsOn": ["^type-check"]
    },
    "build": {
      "dependsOn": ["type-check", "^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["type-check"],
      "outputs": []
    },
    "test": {
      "cache": true,
      "dependsOn": ["type-check"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["type-check"]
    },
    "clean": {
      "cache": false
    }
  }
}
